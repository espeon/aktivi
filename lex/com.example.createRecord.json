{
  "lexicon": 1,
  "id": "com.example.createRecord",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Create a new record",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["text"],
          "properties": {
            "text": {
              "type": "string",
              "maxLength": 300
            }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["uri", "cid"],
          "properties": {
            "uri": {
              "type": "string",
              "format": "at-uri"
            },
            "cid": {
              "type": "string",
              "format": "cid"
            }
          }
        }
      }
    }
  }
}
