{
  "lexicon": 1,
  "id": "co.aktivi.actor.profile",
  "defs": {
    "main": {
      "type": "record",
      "description": "A user profile.",
      "key": "literal:self",
      "record": {
        "type": "object",
        "properties": {
          "displayName": {
            "type": "string",
            "maxLength": 640,
            "maxGraphemes": 64,
            "description": "The display name of the account."
          },
          "description": {
            "type": "string",
            "maxLength": 2560,
            "maxGraphemes": 256,
            "description": "Free-form profile description text."
          },
          "avatar": {
            "type": "blob",
            "accept": ["image/png", "image/jpeg"],
            "maxSize": 1000000,
            "description": "Small image to be displayed next to posts from account."
          },
          "banner": {
            "type": "blob",
            "accept": ["image/png", "image/jpeg"],
            "maxSize": 1000000,
            "description": "Larger horizontal image to display behind profile view."
          }
        }
      }
    }
  }
}
