{
  "lexicon": 1,
  "id": "co.aktivi.event.defs",
  "defs": {
    "eventViewBasic": {
      "type": "object",
      "required": ["uri", "cid", "name"],
      "properties": {
        "uri": {
          "type": "string",
          "format": "at-uri"
        },
        "cid": {
          "type": "string",
          "format": "cid"
        },
        "name": {
          "type": "string"
        },
        "startsAt": {
          "type": "string",
          "format": "datetime"
        }
      }
    },
    "eventView": {
      "type": "object",
      "required": ["uri", "cid", "author", "record", "indexedAt"],
      "properties": {
        "uri": {
          "type": "string",
          "format": "at-uri"
        },
        "cid": {
          "type": "string",
          "format": "cid"
        },
        "author": {
          "type": "ref",
          "ref": "co.aktivi.actor.defs#profileViewBasic"
        },
        "record": {
          "type": "unknown"
        },
        "indexedAt": {
          "type": "string",
          "format": "datetime"
        }
      }
    },
    "eventViewDetailed": {
      "type": "object",
      "required": ["uri", "cid", "author", "record", "indexedAt"],
      "properties": {
        "uri": {
          "type": "string",
          "format": "at-uri"
        },
        "cid": {
          "type": "string",
          "format": "cid"
        },
        "author": {
          "type": "ref",
          "ref": "co.aktivi.actor.defs#profileView"
        },
        "record": {
          "type": "unknown"
        },
        "rsvpCount": {
          "type": "integer"
        },
        "indexedAt": {
          "type": "string",
          "format": "datetime"
        }
      }
    },
    "eventsByDate": {
      "type": "object",
      "required": ["date", "events"],
      "properties": {
        "date": {
          "type": "string",
          "format": "datetime",
          "description": "ISO 8601 date string (YYYY-MM-DD)"
        },
        "events": {
          "type": "array",
          "items": {
            "type": "ref",
            "ref": "co.aktivi.event.defs#eventView"
          }
        }
      }
    }
  }
}
